---
import companylogo from "../assets/braytron-footer-logo.svg";
import facebook from "../assets/socials-img/facebook.svg";
import instagram from "../assets/socials-img/instagram.svg";
import linkedin from "../assets/socials-img/linkedin.svg";
---

<div class="footer-container">
  <div class="footer-wrapper">
    <div class="logo"><img src={companylogo.src} alt="Braytron_Logo" /></div>
    <div class="links">
      <ul>
         <a href="/company">Company</a>
        <a href="/catalog">Catalog</a>
        <a href="/contact">Contact</a>
      </ul>
    </div>
    <div class="socials">
      <a href="https://www.instagram.com/itsbrayton/">
        <img src={instagram.src} alt="Instagram_Logo" />
      </a>
      <a href="https://www.facebook.com/braytron/">
        <img src={facebook.src} alt="Facebook_Logo" />
      </a>
      <a href="https://rs.linkedin.com/company/braytron">
        <img src={linkedin.src} alt="Linkedin_Logo" />
      </a>
    </div>
  </div>

  <div class="border"></div>

  <div class="footer-contact">
    <p id="address">Jadranska Magistrala, Skopje North Macedonia 1000</p>
    <div class="contact">
      <p>Phone : +389 71 215 691</p>
      <p>Email : info@braytron.com</p>
    </div>
  </div>
</div>

<style>
  .footer-container {
    width: 100%;
    margin: 0 auto;
    padding: 2.2rem 0;
    background: #020024;
background: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 29%, rgba(0, 119, 237, 1) 100%);
  }

  .footer-wrapper {
    width: 90%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0.5rem;
    flex-wrap: wrap; 
  }

  .logo img {
    width: 120px;
  }

  .links ul {
    list-style: none;
    display: flex;
    gap: 25px;
    margin: 0;
    padding: 0;
  }

  .links ul a {
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    padding: 8px 10px;
    text-align: center;
    color: white;
    text-decoration: none;
  }

  .socials {
    display: flex;
    gap: 20px;
  }

  .socials img {
    width: 30px;
  }

  .border {
    width: 90%;
    margin: 25px auto;
    border: 1px solid white;
  }

  .footer-contact {
    color: white;
    text-align: center;
    padding-bottom: 1rem;
  }

  .footer-contact #address {
    margin-bottom: 0.5rem;
  }

  .contact {
    display: flex;
    gap: 30px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  
  @media screen and (max-width: 768px) {
    .footer-wrapper {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      text-align: center;
    }

    .links ul {
      flex-direction: column;
      gap: 10px;
    }

    .socials {
      justify-content: center;
    }

    .contact {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
